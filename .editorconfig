# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
insert_final_newline = false

[*.nuspec]
indent_size = 2

[*.ps1]
charset = utf-8-bom

[*.yml]
indent_size = 2
