    "version": "0.2.0",
    "configurations": [
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File",
            "script": "${workspaceFolder}/.vscode/debug.ps1",
            "args": ["-Path", "${file}"],
            "cwd": "${fileDirname}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Test package in WindowsSandbox",
            "script": "${workspaceFolder}/.vscode/test.ps1",
            "cwd": "${fileDirname}"
        },
    ],
}